<h1>All Tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag) %>
      <% if logged_in? %>
        <%= link_to 'Delete Tag', tag_path(tag), method: :delete, style: 'color: red;', data: { confirm: 'Delete Tag?'} %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to "<< Back to Articles", articles_path %>